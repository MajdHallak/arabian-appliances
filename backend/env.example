# Server Configuration
# NODE_ENV can be development, production, or test
NODE_ENV=development
# Port to run the server on (if occupied, will try PORT+1)
PORT=5000

# MongoDB Connection
# Use this format for local MongoDB
MONGODB_URI=mongodb://localhost:27017/arabian-appliance
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# JWT Configuration
# Change these to strong, unique secret keys in production
JWT_SECRET=arabian_appliance_secret_key_2023
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=arabian_appliance_refresh_secret_2023
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
# Use * for all origins in development
# In production, use specific origin(s): https://yourapp.com,https://admin.yourapp.com
CORS_ORIGIN=*

# Admin User Configuration (for initial setup)
# These credentials are used when seeding the database
ADMIN_EMAIL=admin@aa.com
ADMIN_PASSWORD=123123
ADMIN_NAME=Administrator

# Logging Configuration
# Levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log 